<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <padding android:top="0dp" android:right="0dp" android:bottom="0dp" android:left="0dp"/>
            <solid android:color="@color/transparent"/>
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="0.5dp" android:right="0.5dp" android:bottom="1dp" android:left="0.5dp"/>
            <solid android:color="@color/card_shadow_1"/>
            <corners android:radius="@dimen/card_view_corner_radius_small"/>
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="0.5dp" android:right="0.5dp" android:bottom="1dp" android:left="0.5dp"/>
            <solid android:color="@color/card_shadow_2"/>
            <corners android:radius="@dimen/card_view_corner_radius_small"/>
        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@color/card_background"/>
            <corners android:radius="@dimen/card_view_corner_radius_small"/>
        </shape>
    </item>
</layer-list>